<Rule
    xmlns="http://schemas.microsoft.com/build/2009/properties"
    Name="VSCTCompile"
    Description="VSCTCompile Properties"
    DisplayName="VSCTCompile Properties"
    PageTemplate="Tool">
    <Rule.DataSource>
        <DataSource
            HasConfigurationCondition="False"
            ItemType="VSCTCompile"
            Persistence="ProjectFile"
            SourceOfDefaultValue="AfterContext" />
    </Rule.DataSource>
    <Rule.Categories>
        <Category Name="Advanced" DisplayName="Advanced" />
        <Category Name="Misc" DisplayName="Misc" />
    </Rule.Categories>

    <DynamicEnumProperty
        Name="{}{ItemType}"
        Category="Advanced"
        Description="How the file relates to the build and deployment processes."
        DisplayName="Build Action"
        EnumProvider="ItemTypes" />
    <EnumProperty
        Name="CopyToOutputDirectory"
        Category="Advanced"
        Description="Specifies the source file will be copied to the output directory."
        DisplayName="Copy to Output Directory">
        <EnumValue
            Name="Never"
            DisplayName="Do not copy"
            IsDefault="True" />
        <EnumValue Name="Always" DisplayName="Copy always" />
        <EnumValue Name="PreserveNewest" DisplayName="Copy if newer" />
    </EnumProperty>

    <StringProperty
        Name="ResourceName"
        Category="VSIX"
        Description="The name of the resource. Usually 'Menus.ctmenu'."
        DisplayName="Resource Name"
        Visible="True" />

    <StringProperty
        Name="Namespace"
        Category="VSIX"
        Description="The namespace of the generated code."
        DisplayName="Namespace"
        Visible="True" />

    <StringProperty
        Name="TargetDirectory"
        Category="VSIX"
        Description="The directory to generate code."
        DisplayName="Target Directory"
        Visible="True" />

    <BoolProperty
        Name="Pack"
        Category="NuGet Packaging"
        Description="Should the build process pack this file when building nuget packages?"
        DisplayName="Include in NuGet Package" />

    <StringProperty
        Name="PackagePath"
        Category="NuGet Packaging"
        Description="Path to lay the file in the resulting NuGet Package"
        DisplayName="Package Path">
        <StringProperty.ValueEditors>
            <ValueEditor DisplayName="&lt;Edit...&gt;" EditorType="DefaultStringPropertyEditor" />
        </StringProperty.ValueEditors>
    </StringProperty>



    <StringProperty
        Name="Generator"
        Category="Advanced"
        Description="DTE Property for accessing the Generator property."
        DisplayName="Custom Tool"
        Visible="True">
        <StringProperty.ValueEditors>
            <ValueEditor DisplayName="&lt;Edit...&gt;" EditorType="DefaultStringPropertyEditor" />
        </StringProperty.ValueEditors>
    </StringProperty>

    <StringProperty
        Name="CustomToolNamespace"
        Category="Advanced"
        Description="The namespace into which the output of the custom tool is placed."
        DisplayName="Custom Tool Namespace">
        <StringProperty.ValueEditors>
            <ValueEditor DisplayName="&lt;Edit...&gt;" EditorType="DefaultStringPropertyEditor" />
        </StringProperty.ValueEditors>
    </StringProperty>

    <StringProperty
        Name="Identity"
        Category="Misc"
        Description="The item specified in the Include attribute."
        ReadOnly="true"
        Visible="false">
        <StringProperty.DataSource>
            <DataSource
                ItemType="VSCTCompile"
                PersistedName="Identity"
                Persistence="Intrinsic"
                SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>

    <StringProperty
        Name="FullPath"
        Category="Misc"
        Description="Location of the file."
        DisplayName="Full Path"
        ReadOnly="true">
        <StringProperty.DataSource>
            <DataSource
                ItemType="VSCTCompile"
                PersistedName="FullPath"
                Persistence="Intrinsic"
                SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>

    <StringProperty
        Name="FileNameAndExtension"
        Category="Misc"
        Description="Name of the file or folder."
        DisplayName="File Name"
        ReadOnly="true">
        <StringProperty.DataSource>
            <DataSource
                ItemType="VSCTCompile"
                PersistedName="FileNameAndExtension"
                Persistence="Intrinsic"
                SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>

    <StringProperty
        Name="URL"
        ReadOnly="true"
        Visible="false">
        <StringProperty.DataSource>
            <DataSource
                ItemType="VSCTCompile"
                PersistedName="FullPath"
                Persistence="Intrinsic"
                SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>
    <BoolProperty Name="Visible" Visible="false" />
    <StringProperty Name="DependentUpon" Visible="false" />
    <StringProperty Name="Link" Visible="false">
        <StringProperty.DataSource>
            <DataSource PersistenceStyle="Attribute" SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
        Name="Extension"
        ReadOnly="true"
        Visible="False">
        <StringProperty.DataSource>
            <DataSource
                ItemType="VSCTCompile"
                PersistedName="Extension"
                Persistence="Intrinsic"
                SourceOfDefaultValue="AfterContext" />
        </StringProperty.DataSource>
    </StringProperty>
    <StringProperty
        Name="LastGenOutput"
        Description="The filename of the last file generated as a result of the SFG."
        Visible="false" />
    <BoolProperty
        Name="DesignTime"
        Description="A value indicating whether this file has a designer."
        Visible="false" />
    <BoolProperty
        Name="AutoGen"
        Description="A value indicating whether this is a generated file."
        Visible="false" />

</Rule>
