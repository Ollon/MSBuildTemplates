<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:theme="clr-namespace:Ollon.VisualStudio.Extensibility.Themes">
    <Style x:Key="InfoGrid" TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource {x:Static theme:Brushes.InfoBackgroundKey}}" />
        <Setter>
            <Setter.Value>50</Setter.Value>
            <Setter.Property>Grid.ColumnSpan</Setter.Property>
        </Setter>
    </Style>
</ResourceDictionary>